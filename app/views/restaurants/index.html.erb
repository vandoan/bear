<%- model_class = Restaurant -%>

<div class="page-header">
  <h1 align= "center">Grea...   eats<%= image_tag "food.png", :width => 110, :class => "corner"%> <h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:about) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:created_on) %></th>
      <th><%= model_class.human_attribute_name(:menu) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>

  </thead>
  <tbody>


    <% @restaurants.each do |restaurant| %>
      <tr>

        <td><%= link_to(image_tag(restaurant.image_url, :width => 100, :class => "cornerSm"), restaurant_path(restaurant)) if restaurant.image %></td>
        <td><%= link_to restaurant.id, restaurant_path(restaurant) %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.created_at.strftime("%a %b %y")  %></td>
        <td><%= image_tag(restaurant.menu_url, :width => 100, :class => "cornerSm") if restaurant.menu.present? %></td>
        
        <td>      
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_restaurant_path(restaurant), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      restaurant_path(restaurant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_restaurant_path,
            :class => 'btn btn-primary' %>

  <br /> 
  <h4> Find us in New York </h4> 
